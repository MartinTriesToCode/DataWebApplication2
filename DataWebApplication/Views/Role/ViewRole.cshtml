@model IEnumerable<DataWebApplication.Models.ApplicationUser>

<style>
    table {
        width: 70%;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }

        table td, table th {
            border: 1px solid black;
            padding: 12px 15px;
        }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }
</style>


<h1>@ViewBag.role members</h1>


<table>
    <thead>
        <tr>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.UserName</td>
            <td>@item.FirstName </td>
            <td>@item.LastName </td>
            <td>@item.BirthDate </td>
            <td>
                <form asp-action="DeleteMember" asp-controller="Role" asp-route-id="@item.Id" method="Post">
                    <input type="submit" value="Delete" />
                </form>
            </td>
        </tr>
        }

    </tbody>
</table>