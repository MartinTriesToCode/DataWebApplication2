@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<style>
    table {
        width: 70%;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }

    table td, table th {
        border: 1px solid black;
        padding: 12px 15px;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    #links {
       display:flex;
       flex-direction:column;
       align-items:center;
       margin-bottom:10px;
    }
</style>


<h1>Roles</h1>

<div id="links">
    <a asp-action="Create">Create Role</a>
    <a asp-action="AddUserToRole">Add User To Role</a>
</div>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>View</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>
                <form asp-action="ViewRole" asp-route-id="@item.Name" method="Post">
                    <input type="submit" value="View" />
                </form>
            </td>
            <td>
                <form asp-action="DeleteRole" asp-route-id="@item.Id" method="Post">
                    <input type="submit" value="Delete" />
                </form>
            </td>
        </tr>
        }

    </tbody>
</table>
