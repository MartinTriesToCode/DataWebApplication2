</style>



<h1>AddUserToRole</h1>

<form asp-action="AddUserToRole" method="Post">
    <div class="form-group">
        <label>Role:</label>
        <select name="role" asp-items="ViewBag.Roles"></select>
    </div>
    <div class="form-group">
        <label>User:</label>
        <select name="user" asp-items="ViewBag.Users"></select>
    </div>
    <input type="submit" value="Create" />
</form>




